<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>pentaho-saml-assembly-zip</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>pentaho-solutions/system/karaf/deploy</outputDirectory>
      <includes>
        <include>${project.artifactId}-${project.version}.kar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../documentation/resources</directory>
      <outputDirectory>pentaho-solutions/system</outputDirectory>
      <includes>
        <include>applicationContext-spring-security-saml.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../documentation/resources</directory>
      <outputDirectory>tomcat/webapps/pentaho</outputDirectory>
      <includes>
        <include>logout.jsp</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>